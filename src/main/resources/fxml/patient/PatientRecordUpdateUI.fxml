<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hms.doctor.controller.PatientRecordUpdateController"
            prefWidth="400.0" prefHeight="300.0" stylesheets="@/styles/app.css">
    <children>
        <VBox spacing="10" layoutX="20.0" layoutY="20.0">
            <children>
                <Label text="Update Patient Record" style="-fx-font-size: 18px;"/>
                <Label text="Patient Name:"/>
                <TextField fx:id="patientNameField" disable="true"/>
                <Label text="Diagnosis:"/>
                <TextArea fx:id="diagnosisArea" prefWidth="300" prefHeight="100"/>
                <Button text="Update Record" onAction="#handleUpdateRecord" prefWidth="150"/>
                <Label fx:id="feedbackLabel" textFill="green"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
