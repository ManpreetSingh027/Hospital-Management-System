<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hms.patient.controller.PatientProfileController"
            prefWidth="600.0" prefHeight="400.0" stylesheets="@/styles/app.css">
    <children>
        <VBox spacing="15" layoutX="50.0" layoutY="30.0">
            <children>
                <Label text="Patient Profile" style="-fx-font-size: 24px;"/>
                <Label text="Name:"/>
                <TextField fx:id="nameField" promptText="Enter Name"/>
                <Label text="Age:"/>
                <TextField fx:id="ageField" promptText="Enter Age"/>
                <Label text="Address:"/>
                <TextField fx:id="addressField" promptText="Enter Address"/>
                <Label text="Contact:"/>
                <TextField fx:id="contactField" promptText="Enter Contact Number"/>
                <Label text="New Password:"/>
                <TextField fx:id="newPasswordField" promptText="Reset Password"/>
                <Button text="Update Profile" onAction="#handleUpdateProfile" prefWidth="150"/>
                <Label fx:id="feedbackLabel" textFill="green"/>
                <!-- Back button -->
                <Button text="Back" onAction="#handleBack" prefWidth="100"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
