<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hms.patient.controller.PatientBillReportController"
            prefWidth="600.0" prefHeight="400.0" stylesheets="@/styles/app.css">
    <children>
        <VBox spacing="10" layoutX="20" layoutY="20" prefWidth="560" prefHeight="400">
            <children>
                <TextArea fx:id="reportTextArea" prefWidth="560" prefHeight="320" editable="false"/>
                <Button text="Close" onAction="#handleClose" prefWidth="100"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
