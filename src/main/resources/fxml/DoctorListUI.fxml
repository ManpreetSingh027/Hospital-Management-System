<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hms.user.controller.DoctorListController">
    <Text text="Doctor List" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <TableView fx:id="doctorTableView" prefWidth="800" prefHeight="400">
        <columns>
            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="specializationColumn" text="Specialization" prefWidth="150"/>
            <TableColumn fx:id="availabilityColumn" text="Availability" prefWidth="150"/>
            <TableColumn fx:id="passwordColumn" text="Password" prefWidth="150"/>
        </columns>
    </TableView>
    <Button text="Back" onAction="#handleBack"/>
</VBox>
