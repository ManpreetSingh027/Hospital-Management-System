<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hms.user.controller.PatientListController">
    <Text text="Patient List" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <TableView fx:id="patientTableView" prefWidth="800" prefHeight="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="100"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="ageColumn" text="Age" prefWidth="50"/>
            <TableColumn fx:id="addressColumn" text="Address" prefWidth="200"/>
            <TableColumn fx:id="contactColumn" text="Contact" prefWidth="100"/>
        </columns>
    </TableView>
    <Button text="Back" onAction="#handleBack"/>
</VBox>
