<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.hms.user.controller.AddDoctorController">
    <Label text="Add Doctor" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <TextField fx:id="nameField" promptText="Doctor Name"/>
    <TextField fx:id="specializationField" promptText="Specialization"/>
    <TextField fx:id="availabilityField" promptText="Availability"/>
    <!-- New field for password -->
    <TextField fx:id="passwordField" promptText="Password"/>
    <Button text="Add Doctor" onAction="#handleAddDoctor"/>
    <Button text="Back" onAction="#handleBack"/>
    <Label fx:id="messageLabel" style="-fx-text-fill: green;"/>
</VBox>
