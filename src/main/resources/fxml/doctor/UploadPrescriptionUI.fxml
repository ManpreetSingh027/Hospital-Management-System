<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hms.doctor.controller.UploadPrescriptionController"
            prefWidth="400.0" prefHeight="200.0" stylesheets="@/styles/app.css">
    <children>
        <VBox spacing="10" layoutX="20" layoutY="20">
            <children>
                <Label text="Upload Prescription" style="-fx-font-size: 20px;"/>
                <TextField fx:id="filePathField" promptText="File path" editable="false"/>
                <Button text="Choose File" onAction="#handleChooseFile" prefWidth="150"/>
                <Button text="Submit" onAction="#handleSubmit" prefWidth="150"/>
                <Button text="Close" onAction="#handleClose" prefWidth="100"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
