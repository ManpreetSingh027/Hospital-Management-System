<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hms.doctor.controller.DoctorDashboardController"
            prefWidth="800.0" prefHeight="500.0" stylesheets="@/styles/app.css">
    <children>
        <VBox spacing="20" layoutX="50" layoutY="50">
            <children>
                <Text text="Doctor Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Button text="View/Update Patient Records" onAction="#handlePatientRecords" prefWidth="250"/>
                <Button text="Manage Appointments &amp; Treatments" onAction="#handleManageAppointments" prefWidth="250"/>
                <Button text="Prescribe Medications" onAction="#handlePrescribeMedications" prefWidth="250"/>
                <Button text="Manage Profile &amp; Availability" onAction="#handleManageProfile" prefWidth="250"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
